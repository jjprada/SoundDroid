<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                tools:context=".MainActivity">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/sound_list"
        android:layout_weight="100"
        android:layout_height="0dp"
        android:layout_width="match_parent"/>

    <android.support.v7.widget.Toolbar
        android:id="@+id/player_toolbar"
        android:background="@color/secondary_color"
        android:theme="@style/Base.ThemeOverlay.AppCompat.Dark.ActionBar"
        android:layout_height="@dimen/player_toolbar"
        android:layout_width="match_parent">

            <ImageView
                android:id="@+id/player_thumbnail_track"
                android:layout_width="@dimen/avatar_size"
                android:layout_height="@dimen/avatar_size"/>
            <TextView
                android:id="@+id/player_title_track"
                android:textColor="@android:color/white"
                android:paddingLeft="@dimen/vertical_super_small_margin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <ImageView
                android:id="@+id/player_toggle_button"
                android:layout_gravity="right"
                android:layout_width="@dimen/avatar_size"
                android:layout_height="@dimen/avatar_size"/>
    </android.support.v7.widget.Toolbar>

</LinearLayout>
